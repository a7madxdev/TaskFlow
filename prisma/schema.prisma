generator client {
  provider  = "prisma-client"
  output    = "../generated/prisma"
}

datasource db {
  provider  = "mongodb"
  url       = env("MONGODB_URI")
}

model Task {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  done        Boolean   @default(false)
  createAt    DateTime  @default(now())
}